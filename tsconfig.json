{
  "verbose": true,
  "compileOnSave": true,
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "jsx": "react",
    "noEmit": true,
    "composite": true,
    "incremental": true,
    "isolatedModules": true,
    "importHelpers": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "removeComments": true,
    "noImplicitAny": false,
    "baseUrl": ".",
    "typeRoots": [
      "node_modules/@types",
      "typings"
    ],

    "paths": {
      "*": ["types/*"],
      "@/*": ["src/*"],
      "atoms": ["src/components/atoms"],
      "molecules": ["src/components/molecules"],
      "organisms": ["src/components/organisms"],
      "templates": ["src/components/templates"],
      "constants": ["src/constants"],
      "libs/*": ["src/libs/*"],
      "modules/*": ["src/modules/*"],
      "services/*": ["src/services/*"],
      "stores/*": ["src/stores/*"],
      "styles/*": ["src/styles/*"],
      "typings/*": ["src/typings/*"],
      "utils/*": ["src/utils/*"]
    }
  },

  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ],

  "exclude": [
    "node_modules",
    "build",
    "public",
    "server",
    "babel.config.js",
    "commitlint.config.js",
    "husky.config.js",
    "stylelint.config.js",
    "tailwind.config.js"
  ]
}
